FROM python:3.7.3-alpine

# Setup dependencies in a cacheable step
COPY requirements.txt /requirements.txt

RUN apk update && apk upgrade && \
		echo "manylinux1_compatible = True" > /usr/local/lib/python3.7/site-packages/_manylinux.py && \
		apk add --no-cache gcc g++ libgomp && \
		pip install --disable-pip-version-check --no-cache-dir -r /requirements.txt && \
		apk del gcc g++ libgomp && \
		rm -rf /var/cache/apk/*

COPY . /tmp/bugbug
RUN pip install --disable-pip-version-check --no-cache-dir /tmp/bugbug
